<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.Material3.DayNight.NoActionBar"/>

    <style name="Theme.PracticumAndroidDiploma" parent="Base.Theme.PracticumAndroidDiploma">
        <item name="android:colorBackground">@color/black</item> <!-- Цвет фона -->
        <item name="colorAccent">@color/blue</item> <!-- Основной акцентный голубой цвет -->
        <item name="colorOnPrimary">@color/white</item> <!-- Основной цвет текста и иконок -->
        <item name="colorHint">@color/gray</item><!-- Цвет полей ввода -->
        <item name="colorHintCard">@color/gray</item><!-- Цвет фона названия компании -->
        <item name="colorTextOnAccent">@color/white</item><!-- Цвет текста на основном акцентном цвете(цвет текста на кнопках) -->
        <item name="titleTextColor">@color/white</item><!-- Цвет заголовка -->
        <item name="colorRed">@color/red</item><!-- Акцентный красный цвет -->
        <item name="colorIcon">@color/gray</item><!-- Цвет иконки нижней навигации -->
        <item name="colorTextSearch">@color/black</item><!-- Цвет в строке ввода -->
        <item name="hintTextColor">@color/white</item><!-- Цвет плейсхолдера в строке ввода -->

        <!-- Цвета статус-бара -->
        <item name="android:statusBarColor">@color/black</item> <!-- Цвет темного статус-бара -->
        <item name="android:windowLightStatusBar">false</item> <!-- Включает темный статус-бар -->
    </style>
</resources>
