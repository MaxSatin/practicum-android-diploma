<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Стили текста -->
    <style name="TextBold_32">
        <item name="android:textSize">@dimen/sp_32</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textFontWeight" tools:targetApi="28">700</item>
    </style>

    <style name="TextMedium_22">
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="28">500</item>
    </style>

    <style name="TextMedium_16">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="28">500</item>
    </style>

    <style name="TextRegular_16">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="28">400</item>
    </style>

    <style name="TextRegular_12">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="28">400</item>
    </style>

    <!-- Другие стили -->
    <style name="filterLabel" parent="TextRegular_12">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="filterLabelValue" parent="TextRegular_16">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="filterLabelPlaceholder" parent="TextRegular_16">
        <item name="android:textColor">?attr/hintTextColor</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">?attr/colorTextSearch</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="android:theme">@style/ThemeOfSearchEditText</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:drawableTint">?attr/colorTextSearch</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="filterBtnStyle" parent="TextRegular_16">
        <item name="android:textColor">?attr/colorTextOnAccent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">20dp</item>
    </style>


    <style name="FilterButtonBackground">
        <item name="android:backgroundTint">?attr/android:colorBackground</item>
    </style>

    <style name="NavigationMenu" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="28">400</item>
        <item name="android:background">?attr/android:colorBackground</item>
    </style>

    <style name="RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
    <item name="buttonTint">?attr/colorAccent</item>
    </style>

    <style name="SmallTextBlack" parent="TextRegular_12">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BigTextBlack" parent="TextRegular_16">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BigTextGray" parent="TextRegular_16">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ButtonChoose" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextMedium_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_select</item>
    </style>


    <style name="LeadingButton">
        <item name="buttonTint">?attr/colorOnPrimary</item>
    </style>
</resources>
