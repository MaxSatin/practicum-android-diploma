<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.practicum.android.diploma.team.ui.TeamFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_begin_end_gl_16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_begin_end_gl_16dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/team"
        app:titleTextAppearance="@style/TextMedium_22"/>


    <TextView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lines="2"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="@id/glBegin"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        android:text="@string/working_on_the_app"
        android:textAppearance="@style/TextBold_32"
        android:textColor="?attr/colorOnPrimary"/>

    <TextView
        android:id="@+id/fio1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/glBegin"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        android:text="@string/fio1"
        android:textAppearance="@style/TextMedium_16"
        android:textColor="?attr/colorOnPrimary"/>

    <TextView
        android:id="@+id/fio2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/fio1"
        app:layout_constraintStart_toStartOf="@id/glBegin"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        android:text="@string/fio2"
        android:textAppearance="@style/TextMedium_16"
        android:textColor="?attr/colorOnPrimary"/>

    <TextView
        android:id="@+id/fio3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/fio2"
        app:layout_constraintStart_toStartOf="@id/glBegin"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        android:text="@string/fio3"
        android:textAppearance="@style/TextMedium_16"
        android:textColor="?attr/colorOnPrimary"/>

    <TextView
        android:id="@+id/fio4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/fio3"
        app:layout_constraintStart_toStartOf="@id/glBegin"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        android:text="@string/fio4"
        android:textAppearance="@style/TextMedium_16"
        android:textColor="?attr/colorOnPrimary"/>

    <TextView
        android:id="@+id/fio5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/fio4"
        app:layout_constraintStart_toStartOf="@id/glBegin"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        android:text="@string/fio5"
        android:textAppearance="@style/TextMedium_16"
        android:textColor="?attr/colorOnPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>
